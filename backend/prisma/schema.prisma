// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id       String     @id @default(auto()) @map("_id") @db.ObjectId
  username String     @unique
  password String
  Bookmark Bookmark[]
  tags     Tag[]
  groups   Group[]
}

model Bookmark {
  id         String      @id @default(auto()) @map("_id") @db.ObjectId
  user       User        @relation(fields: [userId], references: [id])
  userId     String      @db.ObjectId
  url        String
  title      String
  summary    String?
  tags       Tag[]
  group      Group
  updated    UpdatedFrom
  creatdedAt DateTime    @default(now())
}

type Group {
  name String
  from Source
}

type Tag {
  name String
}

enum Source {
  Web
  Mobile
}

enum UpdatedFrom {
  None
  Web
  Mobile
}
