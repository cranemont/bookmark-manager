// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id       String     @id @default(auto()) @map("_id") @db.ObjectId
  username String     @unique
  password String
  Bookmark Bookmark[]
  tags     Json
  groups   Group[]
}

model Bookmark {
  id         String     @id @default(auto()) @map("_id") @db.ObjectId
  user       User       @relation(fields: [userId], references: [id])
  userId     String     @db.ObjectId
  url        String
  title      String
  summary    String?
  tags       Json
  group      Group
  updated    UpdateFrom
  creatdedAt DateTime   @default(now())
}

type Group {
  name String
  from Source
}

enum Source {
  Web
  Mobile
}

enum UpdateFrom {
  None
  Web
  Mobile
  Both
}
